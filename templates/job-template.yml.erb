- name: lint-<%= branch_name %>
  plan:
  - get: git-branch
    resource: git-branch-<%= branch_name %>
    params: {depth: 20}
    trigger: true
  - get: concourse-configs-<%= branch_name %>
    resource: concourse-configs
    params: {depth: 20}
  - task: lint-task
    file: git-branch/ci/lint.yml
    config:
      params:
        branch: <%= branch_name %>
  - put: lint-reports-<%= branch_name%>

- name: unit-tests-<%= branch_name %>
  plan:
  - get: git-branch
    resource: git-branch-<%= branch_name %>
    params: {depth: 20}
    trigger: true
  - get: concourse-configs-<%= branch_name %>
    resource: concourse-configs
    params: {depth: 20}
  - task: unit-tests-task
    file: git-branch/ci/unit-tests.yml
    config:
      params:
        branch: <%= branch_name %>
  - put: unit-test-reports-<%= branch_name%>


- name: push-to-pcf-<%= branch_name %>
  plan:
  - get: lint-reports-<%= branch_name %>
    passed: [lint-<%= branch_name %>]
  - get: unit-test-reports-<%= branch_name %>
    passed: [unit-tests-<%= branch_name %>]
  - get: git-branch
    resource: git-branch-<%= branch_name %>
    params: {depth: 20}
    trigger: true
  - get: concourse-configs-<%= branch_name %>
    resource: concourse-configs
    params: {depth: 20}
  - task: push-to-pcf-task
    file: git-branch/ci/pcf.yml
    config:
      params:
        branch: <%= branch_name %>
