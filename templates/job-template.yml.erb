- name: lint-<%= branch_name %>
  plan:
  - get: drupal-app-git
    resource: drupal-app-git<%= branch_name %>
    trigger: true
  - task: lint-task
    file: drupal-app-git-<%= branch_name %>/ci/tasks/lint.yml
  - put: lint-reports-<%= branch_name%>

- name: unit-tests-<%= branch_name %>
  plan:
  - get: git-branch
    resource: drupal-app-git-<%= branch_name %>
    trigger: true
  - task: unit-tests-task
    file: drupal-app-git-<%= branch_name %>/ci/tasks/unit-tests.yml
  - put: unit-test-reports-<%= branch_name%>
